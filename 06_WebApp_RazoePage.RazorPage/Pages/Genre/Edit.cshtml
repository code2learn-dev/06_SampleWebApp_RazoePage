@page "{id?}/{format?}"
@model _06_WebApp_RazoePage.RazorPage.Pages.Genre.EditModel
@{
	ViewBag.Title = "ویرایش دسته بندی";
	ViewBag.CssTitle = "success";
	LinkViewModel linkViewModel = new LinkViewModel()
	{
		ButtonCaption = "ویرایش",
		Caption = "بازگشت",
		PageName = "Index" 
	};
}
<form method="post">
	<input asp-for="CrudEntityViewModel.Id" type="hidden" />
	<div class="mt-2">
		<label asp-for="CrudEntityViewModel.Title"></label>
		<input asp-for="CrudEntityViewModel.Title" class="form-control" />
		<span class="text-danger" asp-validation-for="CrudEntityViewModel.Title"></span>
	</div>
	<partial name="LinkView" model="@linkViewModel" />
</form>
